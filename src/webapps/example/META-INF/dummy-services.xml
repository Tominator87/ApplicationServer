<?xml version="1.0" encoding="UTF-8"?>
<server>
    
    <!--
        SchedulableArguments: A comma separated list of arguments passed to the constructor of the MessageBean during instanciation.
        SchedulableArgumentTypes: The comma separated list of types of the passed arguments
        InitialStartDate: Unix Timestamp when the MessageBean's perform() method will be invoked the first time
        SchedulePeriod: The period in seconds when the MessageBean's perform() method will be invoked
        InitialRepetitions: The number of repetitions the MessageBean's perform() method will be invoked, -1 for endlessly repetitions
        StartAtStartup: When TRUE the MessageBean's start() method will be invoked when the MessageQueue starts
    -->
    
    <message-bean name="LogTest" directory="classes">
        <attribute name="SchedulableClass">LogTestMessageBean</attribute>
        <!-- attribute name="SchedulableArguments">Schedulabe Test,12345</attribute -->
        <!-- attribute name="SchedulableArgumentTypes">string,integer</attribute -->
        <attribute name="InitialStartDate">0</attribute>
        <attribute name="SchedulePeriod">10</attribute>
        <attribute name="InitialRepetitions">1</attribute>
        <attribute name="StartAtStartup">true</attribute>
    </message-bean>
</server>